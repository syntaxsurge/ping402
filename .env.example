# Convex
# - Generated when you run `pnpm convex dev`
NEXT_PUBLIC_CONVEX_URL=
CONVEX_DEPLOYMENT=
# - Required for Vercel builds that run `npx convex deploy ...`
CONVEX_DEPLOY_KEY=

# App / SEO
# - Used for absolute URLs in OpenGraph images, robots.txt, and sitemap.xml
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# x402 + Solana
NEXT_PUBLIC_WALLET_ADDRESS=
NEXT_PUBLIC_NETWORK=solana-devnet
# Testnet facilitator (Solana devnet)
NEXT_PUBLIC_FACILITATOR_URL=https://x402.org/facilitator
# CDP facilitator (mainnet + discovery listing)
# NEXT_PUBLIC_FACILITATOR_URL=https://api.cdp.coinbase.com/platform/v2/x402
# Optional (enables Coinbase Onramp "Get more USDC" in the paywall UI)
# - When set, requires CDP_API_KEY_ID and CDP_API_KEY_SECRET
NEXT_PUBLIC_CDP_CLIENT_KEY=

# Coinbase Developer Platform (server-only, used by /api/x402/session-token)
CDP_API_KEY_ID=
CDP_API_KEY_SECRET=

# ping402 paid inbox
PING402_JWT_SECRET=
PING402_OWNER_HANDLE=ping402
PING402_OWNER_DISPLAY_NAME=Ping402
PING402_OWNER_BIO=
